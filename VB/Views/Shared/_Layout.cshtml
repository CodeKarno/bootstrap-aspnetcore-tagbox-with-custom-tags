<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>DevExpress Bootstrap ASP.NET Core Tagbox With Custom Tags Example</title>
    <link rel="stylesheet" href="~/lib/css/bootstrap/bootstrap.css" />
    @Html.DevExpress().StyleSheets()
</head>
<body>
    <nav class="navbar mb-4 navbar-expand-md navbar-dark bg-dark">
        <a asp-controller="Home" asp-action="Index" class="navbar-brand">
            DevExpress Bootstrap ASP.NET Core
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarMenu" aria-expanded="false">
            <span class="navbar-toggler-icon"></span>
        </button>
    </nav>
    <div class="container">
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger">
                @TempData["Error"]
            </div>
        }
        @if(TempData["Success"] != null)
        {
            <div class="alert alert-success" role="alert">
                @TempData["Success"]
            </div>
        }
        @RenderBody()
        <hr />
        <footer>
            <p>Copyright &copy; 2006-@DateTime.Now.Year - Developer Express Inc</p>
        </footer>
    </div>

    <script src="~/lib/js/jquery/jquery.js"></script>
    @Html.DevExpress().Scripts()
</body>
</html>